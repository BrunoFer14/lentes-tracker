{
  "cli": { "version": ">= 7.1.0" },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "credentialsSource": "remote",
      "android": { "buildType": "apk" },          
      "ios": { "simulator": false }               
    },
    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "credentialsSource": "remote",
      "ios": { "simulator": true }                
    },
    "production": {
      "credentialsSource": "remote",
      "android": { "buildType": "app-bundle" },
      "ios": {}
    }
  },
  "submit": {
    "production": {}
  }
}
